{
  "name": "authkit",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "module": "dist/server/index.js",
  "files": [
    "dist/",
    "drizzle/"
  ],
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./drizzle/*": "./drizzle/*"
  },
  "peerDependencies": {
    "next": ">=13.4 || >=14 || >=15",
    "react": ">=18.2.0 || >=19",
    "react-dom": ">=18.2.0 || >=19"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.7",
    "drizzle-kit": "^0.31.5",
    "tsup": "^8",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "scripts": {
    "build": "tsup src/client/index.ts src/server/index.ts --format cjs,esm --dts",
    "dev": "tsup --watch --dts"
  },
  "dependencies": {
    "@types/argon2": "^0.14.1",
    "argon2": "^0.44.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  }
}
